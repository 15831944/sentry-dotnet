<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;netcoreapp2.1;net461</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../src/Sentry/Sentry.csproj" />
    <ProjectReference Include="../Sentry.Testing/Sentry.Testing.csproj" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <PackageReference Include="Xunit.SkippableFact" Version="1.3.12" />
    <Reference Include="System.Web" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='net471'">
    <ProjectReference Include="..\..\src\Sentry\Sentry.csproj" Properties="TargetFramework=net471" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='net461'">
    <ProjectReference Include="..\..\src\Sentry\Sentry.csproj" Properties="TargetFramework=net461" />
  </ItemGroup>

  <PropertyGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <DefineConstants>NETFX;$(DefineConstants)</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="$(TargetFramework.StartsWith('netcoreapp'))">
    <DefineConstants>NETCOREAPP;$(DefineConstants)</DefineConstants>
  </PropertyGroup>

</Project>
